% layout 'default';

%= javascript '/d3-3.4.13/d3.min.js'

%= javascript '/js/home.js'

<div id="home">

  % if ($self->session('email')) {

    <div class="row">
      <div class="col-md-12 col-lg-12">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Summary</h3>
          </div>
          <div class="panel-body">
            <div>Company data, invoices graph, ...</div>
            <hr>
            <div id="summarygraph" width="100%" style="padding:0;margin:0;background-color:grey;"></div>
          </div>
        </div>
      </div>
    </div>

  % } else {

    <div class="row text-center">
      <div class="col-md-4 col-lg-4 col-md-offset-4 col-lg-offset-4 centered_login_form">
        <form class="form-signin" role="form" method='POST' action='<%= url_for "auth_login" %>'>
          <fieldset>
            <div class="form-group"><input type="text" class="form-control" placeholder="email" required="" autofocus="" name="email" value=""></div>
            <div class="form-group"><input type="password" class="form-control" placeholder="password" required="" name="password"></div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
            </div>
            %= csrf_field
          </fieldset>
          <%= include 'msg' %>
        </form>
      </div>
    </div>
    <div class="row text-center">
      <div class="col-md-12 col-lg-12">
        <span class='red_msg' >
            <%= flash 'error' %>
        </span>
        <span class='green_msg' >
            <%= flash 'notice'%>
        </span>
      </div>
    </div>

  % }

</div>

%# ################################################### %>
