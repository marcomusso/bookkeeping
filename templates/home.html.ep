  <script>
    function startIntro(){
      var intro = introJs();
      intro.setOptions({
            steps: [
              {
                intro: "Start help"
              },
              {
                element: '#0',
                intro: "TBD",
              },
              {
                element: '#1',
                intro: "TBD",
              }
            ]
      });
      intro.start();
    }
  </script>
