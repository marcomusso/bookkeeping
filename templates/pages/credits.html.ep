% layout 'default';
% title 'BookKeeping - Credits';

<%# Javascript  %>
  %= javascript '/js/credits.js'

<div class="row text-center">
  %= tag h1 => 'BookKeeping'
  %= tag h5 => 'A simple Mojolicious app to keep track of your invoices.'
</div>

<div class="row">
  <div class="col-lg-1 col-md-1"></div>
  <div class="col-lg-10 col-md-10">
    <ul id="mytabs" class="nav nav-tabs nav-justified">
